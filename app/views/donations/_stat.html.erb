<script>
  new Morris.Line({
    element: 'chart',
    data: [
      <% @funding_progress.each do |point| %>
        <% if @funding_progress.index(point) != (@funding_progress.length-1) %>
          { date: '<%= point[:date] %>', sum: <%= point[:sum].to_i %> },
        <% else %>
          { date: '<%= point[:date] %>', sum: <%= point[:sum].to_i %> }
        <% end %>
      <% end  %>
    ],
    xkey: 'date',
    ykeys: ['sum'],
    ymax: <%= @project.funding_goal %>,
    xLabels: "day",
    labels: ['sum']
  });  
</script>