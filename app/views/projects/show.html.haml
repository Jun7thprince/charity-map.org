.overlay.proj-cover{style: "background-image: url('/assets/61150027.jpg')"}
  .overlay
%header.proj-header.row.col-md-8.col-md-offset-2
  %nav.navbar.proj-details{role: "navigation"}
    .row.col-md-8.col-md-offset-2.clearfix
      %ul.nav.navbar-nav.project-links
        %li= link_to "Thông Tin", root_path
        %li
          = link_to "#project_updates" do
            Cập Nhật #{"(#{@project.project_updates.count})" if @project.project_updates.count > 0}
        %li
          = link_to project_donations_path(@project) do
            Mạnh Thường Quân #{"(#{@project.donations_count})" if @project.donations_count > 0}
        %li
          = link_to "#project_comments" do
            Bình Luận #{"(#{@project.project_comments.count})" if @project.project_comments.count > 0}
  %h1.text-shadow= @project.title
  %span
    %i.glyphicon.glyphicon-map-marker>
    = @project.location
  .group-details
    %span
      - if @user.avatar? 
        = image_tag(@user.avatar_url(:large), class: "img-circle group-ava")
      - else
        = image_tag("ph_project-thumbnail.jpg", class: "img-circle group-ava")
    %h1 #{link_to @user.name, user_profile_path(@user)}
    %span.quote "#{@project.brief}"
