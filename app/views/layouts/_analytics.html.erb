          var _href = $(this).attr('href');
          if (_href.indexOf('?') > 0) {
            added_param = '&ga_client_id='
          } else {
            added_param = '?ga_client_id='
          }
          $(this).attr('href', _href + added_param + clientId);
        });
      }
    });
  });
