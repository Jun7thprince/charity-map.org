= content_for :head do
  = stylesheet_link_tag    "wrapdashboard/optional/user-profile", media: "all", "data-turbolinks-track" => true
  %style 
    form li {list-style-type: none !important;};
#pad-wrapper.form-page
  .row.form-wrapper
    / left column
    .col-md-8.column
      - if !@user.errors.empty?
        .alert.alert-warning
          - @user.errors.full_messages.each do |error_message| 
            = error_message 
            %br/
      = semantic_form_for @user,:method => :post,  url: users_update_settings_path do |f|
        = f.input  :id, :as => :hidden
        .field-box
          %label Email
          .col-md-7
            = f.input :email, label: false, input_html: {type: "text", class: "form-control inline-input"}
        .field-box
          %label Họ và Tên
          .col-md-7
            = f.input :full_name, label: false, input_html: {type: "text", class: "form-control inline-input"}, :wrapper_html => { :style => "list-style-type: none;" }
        .field-box
          %label Liên Lạc
          .col-md-7
            = f.input :address, label: false, :input_html => { type: "text", class: "form-control inline-input" }
        .field-box
          %label Giới Thiệu:
          .col-md-7
            = f.input :bio, label: false, :input_html => { :rows => 15, class: "form-control" }
        .field-box
          %label Số Điện Thoại
          .col-md-7
            .input-group
              %span.input-group-addon 84
              = f.input :phone, label: false, input_html: {type: "text", class: "form-control"}
        .field-box
          %label Ảnh Đại Diện
          .col-md-7
            = image_tag(@user.avatar_url(:medium)) if @user.avatar? 
            = f.file_field :avatar 
            = f.hidden_field :avatar_cache        
        .field-box
          %label Tổ chức?
          %label.checkbox-inline
            = f.check_box :org
