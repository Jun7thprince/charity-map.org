.body-container--dark-row
	.body-container--content
		.devider
			.item Dự Án Của Bạn
			.note Danh Sách Hoàn Chỉnh
			/ TODO: add link
		.row-fluid
			- if current_user.projects.empty?
				%p Hiện bạn chưa có dự án nào. #{link_to "Tạo dự án đầu tiên!", new_project_path}
			- else
				- current_user.projects.each do |project|
					= render "projects/bar_display", :project => project, :donations_list => donations_from_7_days(project)

.body-container--plain-row
	.body-container--content
		.row-fluid
			.row-fluid
				.devider
					.item Đóng Góp Của Bạn
					.note Danh Sách Hoàn Chỉnh
					/ TODO: add link
			.row-fluid
				- if current_user.donations.empty?
					%p Hiện chưa có thống kê về những khoản tài trợ bạn đã đóng góp.
				- else 
					.row-fluid.donation--bar.row-heading
						.span1 MÃ
						.span4.centered DỰ ÁN
						.span4 SỐ TIỀN / PHƯƠNG THỨC
						.span3.righted TRẠNG THÁI
					- cache("user_donations", :expires_in => 12.hours) do
						-	current_user.donations.each do |donation|
							= render "layouts/donation_display", donation: donation

:javascript
	$(document).ready(function(){ 
		$(".show-chart").click(function(){
			var bar_display = $(this).parents(".bar-display");
			var donation_chart = $(".donation-chart", bar_display);
			donation_chart.toggle();
		});
	});