.row-fluid
  .span4
    .user-profile
      .avatar
        - if comment.user.avatar? 
          = image_tag(comment.user.avatar_url(:small), size: "30x30")
        - else
          = image_tag("default_avatar.png", size: "30x30")
      .user-info
        .name= link_to comment.user.full_name, user_profile_path(comment.user)
        .des-1 #{human_time comment.updated_at}
  .span8
    %p 
      = comment.content
%hr/