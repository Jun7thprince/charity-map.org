source 'https://rubygems.org'

ruby '2.0.0'
# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'

gem 'pg'
gem 'devise', '~> 3.0.3'
gem 'haml-rails'
gem 'inherited_resources'
