gem 'protected_attributes'
gem 'awesome_print', :require => 'ap'
gem 'carrierwave'
gem 'fog'
gem 'rmagick', :require => 'RMagick'

group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'quiet_assets'
end

